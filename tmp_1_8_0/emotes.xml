<!-- FRAMES -->
<!-- <frames> tag can have an actor_type="n" property. If not defined, caf files are loaded for each race and sex, otherwise only for "n". Actor types are in client_serv.h -->
	<frames>
	<!--index is mandatory, and must be used as a reference in the <anim> tags of emote.xml-->
	<!--for an emote to be loaded the frame tag must start with CAL_emote -->
	<!--a sound can be specified for a frame, it will be played with the emote -->
	<CAL_emote_wave_stand index="0" duration="560">./animations/emotes/player_wave_stand.caf 1</CAL_emote_wave_stand>
	<CAL_emote_wave_sit index="1" duration="560">./animations/emotes/player_wave_sit.caf 1</CAL_emote_wave_sit>
	<CAL_emote_wave_walk index="2" duration="500">./animations/emotes/player_wave_walk.caf 1</CAL_emote_wave_walk>
	<CAL_emote_wave_held index="4" duration="560">./animations/emotes/player_wave_held.caf 1</CAL_emote_wave_held>
	<CAL_emote_wave_run index="5" duration="560">./animations/emotes/player_wave_run.caf 1</CAL_emote_wave_run>
	<CAL_emote_nod index="6" duration="400">./animations/emotes/player_nod.caf 1</CAL_emote_nod>
	<CAL_emote_shake index="7" duration="400">./animations/emotes/player_shake.caf 1</CAL_emote_shake>
		
	<CAL_emote_spell_1 index="10" sound="Punch">./animations/player_spell1.caf 1</CAL_emote_spell_1>
	<CAL_emote_spell_2 index="11" sound="Kick">./animations/player_spell2.caf 1</CAL_emote_spell_2>
	<CAL_emote_spell_3 index="12" sound="alert4">./animations/player_spell3.caf 1</CAL_emote_spell_3>
	<CAL_emote_sit index="40">./animations/player_sit_idle.caf 0</CAL_emote_sit>
	<CAL_emote_sit index="41">./animations/player_idle1.caf 0</CAL_emote_sit>
	<CAL_emote_sit index="42">./animations/player_walk.caf 0</CAL_emote_sit>
	<CAL_emote_sit index="43">./animations/player_run.caf 0</CAL_emote_sit>
	</frames>
