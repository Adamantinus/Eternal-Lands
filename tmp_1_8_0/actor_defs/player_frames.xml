<frames>
	<CAL_walk>./animations/player_walk.caf 0</CAL_walk>
	<CAL_run>./animations/player_run.caf 0</CAL_run>
	<CAL_pain1 duration="500">./animations/player_pain1.caf 1</CAL_pain1>
	<CAL_idle>./animations/player_idle1.caf 0</CAL_idle>
	<CAL_idle_sit>./animations/player_sit_idle.caf 0</CAL_idle_sit>
	<CAL_sit_down>./animations/player_sit_in.caf 1</CAL_sit_down>
	<CAL_stand_up>./animations/player_sit_out.caf 1</CAL_stand_up>
	<CAL_in_combat duration="500">./animations/player_fight_in.caf 1</CAL_in_combat>
	<CAL_out_combat duration="500">./animations/player_fight_out.caf 1</CAL_out_combat>
	<CAL_combat_idle duration="500">./animations/player_fight_idle.caf 0</CAL_combat_idle>

	<!--EMOTES: index is mandatory, and must be used as a reference in the animation tags of emote.xml-->
	<!--EMOTES: index can be [0..99]-->
	<!--EMOTES: for an emote to be loaded the animation tag must start with CAL_emote -->
	<!--EMOTES: a sound can be specified for an animation, it will be played with the emote -->
	<CAL_emote_wave_stand index="0" duration="560">./animations/emotes/player_wave_stand.caf 1</CAL_emote_wave_stand>
	<CAL_emote_wave_sit index="1" duration="560">./animations/emotes/player_wave_sit.caf 1</CAL_emote_wave_sit>
	<CAL_emote_wave_walk index="2" duration="500">./animations/emotes/player_wave_walk.caf 1</CAL_emote_wave_walk>
	<CAL_emote_wave_held index="4" duration="560">./animations/emotes/player_wave_held.caf 1</CAL_emote_wave_held>
	<CAL_emote_wave_run index="5" duration="560">./animations/emotes/player_wave_run.caf 1</CAL_emote_wave_run>
	<CAL_emote_nod index="6" duration="400">./animations/emotes/player_nod.caf 1</CAL_emote_nod>
	<CAL_emote_shake index="7" duration="400">./animations/emotes/player_shake.caf 1</CAL_emote_shake>
	<!--EMOTES: for a spell action the animation tag must start with CAL_spell and index can go from 0 to 99 	
	included. It is stored in the same array of emotes so don't mix spell action indexes with emote indexes-->
		
	<CAL_spell_1 index="10" sound="Punch">./animations/player_spell1.caf 1</CAL_spell_1>
	<CAL_spell_2 index="11" sound="Kick">./animations/player_spell2.caf 1</CAL_spell_2>
	<CAL_spell_3 index="12" sound="alert4">./animations/player_spell3.caf 1</CAL_spell_3>

	<CAL_in_combat_held duration="500">./animations/player_fight_in.caf 1</CAL_in_combat_held>
	<CAL_out_combat_held duration="500">./animations/player_fight_out.caf 1</CAL_out_combat_held>
	<CAL_combat_idle_held duration="500">./animations/player_fight_idle.caf 0</CAL_combat_idle_held>
</frames>
